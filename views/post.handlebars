{{!-- views/post.handlebars file --}}
<main class="container mt-5">
  <article>
    <h1 class="post-title-font">{{title}}</h1>
    <p class="custom-text-color">Created by: {{user.username}} | Date: {{format_date createdAt}}</p>
    <p class="content-font">{{content}}</p>
  </article>
  {{#if logged_in}}
    <form class="new-tech-comment-form" class="mb-3">
      <div class="mb-3">
        <label for="content-new-tech-comment" class="form-label">Add Comment:</label>
        <textarea
          class="form-control"
          id="content-new-tech-comment"
          rows="3"
          placeholder="Add a comment..."
        ></textarea>
      </div>
      <button type="submit" class="btn btn-info">Submit</button>
    </form>
  {{/if}}
  <h2 class="comment-history-font">Comment History:</h2>
  {{#each comments}}
    <div class="comment mb-3">
      <p>{{comment_text}}</p>
      <p class="custom-text-color">By {{user.username}} on {{format_date createdAt}}</p>
    </div>
  {{/each}}
</main>